---
type Content = {
  hero?: {
    background?: string;
    title?: string;
    subtitle?: string;
    buttonText?: string;
  };
  introduction?: {
    title?: string;
    subtitle?: string;
  };
  content_1?: {
    title?: string;
    subtitle?: string;
    ImageDirectory?: string;
  };
  content_2?: {
    title?: string;
    subtitle?: string;
    ImageDirectory?: string;
  };
  content_3?: {
    title?: string;
    subtitle?: string;
    ImageDirectory?: string;
  };
  content_4?: {
    minititle?: string;
    title?: string;
    subtitle?: string;
    buttonText?: string;
  };
};

import { createClient } from '@supabase/supabase-js';
import Layout from '../layouts/Layout.astro';

const supabase = createClient (
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_ANON_KEY
);

const { data: row, error } = await supabase
  .from('Trainings')
  .select('hero, introduction, content_1, content_2, content_3, content_4')
  .limit(1)
  .single();


  const content: Content = row || {};

if (error) {
  console.error("Error fetching training data:", error);
} else {
  console.log('Fetched row data from Supabase:', row);
}

