    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;600;700&display=swap");

        /* Hero Section */
        .hero {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-size: cover;
            background-position: center;
            height: 100vh;
            padding: 20px;
            color: white;
            text-align: center;
        }
        /* Hero Title */
        .hero-title {
            font-family: "Bebas Neue", sans-serif;
            font-size: 6rem;
            line-height: 1.2;
            margin-bottom: 1.2rem;
        }

        .hero-title .underline {
            text-decoration: underline;
            text-decoration-thickness: 0.5px;
            text-underline-offset: 2px;
            color: #ffffff;
        }
        /* Hero Subtitle */
        .hero-subtitle {
            font-family: "Poppins", sans-serif;
            font-size: 1.5rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }
        /* Hero Button */
        .hero-button {
            background-color: #ffffff;
            color: black;
            padding: 15px 30px;
            font-size: 1rem;
            font-family: "Poppins", sans-serif;
            text-transform: uppercase;
            font-weight: 600;
            text-decoration: none;
            border-radius: 50px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
            transition:
                background-color 0.3s,
                transform 0.2s;
        }
        .hero-button:hover {
            background-color: #f0f0f0;
            transform: scale(1.05);
        }
        /* Introduction */
        .introduction {
            background: white;
            height: fit-content;
            padding: 40px 20px;
            text-align: center;
            align-items: center;
            border-radius: 8px;
            margin: 20px auto;
            max-width: 750px;
        }
        .intro-title {
            font-family: Roboto, sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #212529;
            margin-bottom: 16px;
        }
        .intro-subtitle {
            font-family: Roboto, sans-serif;
            font-size: 1.2rem;
            color: #475569;
            line-height: 1.6;
            margin: 0;
        }

        .content-1 {
            background-color: #0b0221;
            padding: 30px;
            height: 65vh;
            display: flex;
            justify-content: center;
            align-items: center;
            box-sizing: border-box;
        }

        .content-1-container {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-evenly;
            max-width: 1100px;
            height: fit-content;
            gap: 50px;
        }

        .content-1-text {
            font-family: Roboto, sans-serif;
            flex: 1;
            color: white;
            max-height: 80%;
            padding: auto 20px;
        }

        .content-1-title {
            font-size: 2.2rem;
            font-family: "Roboto", sans-serif;
            font-weight: bold;
            color: white;
            background: #2562ff;
            padding: 10px 15px;
            border-radius: 5px;
            display: inline-block;
            margin-bottom: 2.5rem;
        }

        .content-1-subtitle {
            font-family: Roboto, sans-serif;
            font-size: 1.2rem;
            margin-top: 10px;
            line-height: 1.5;
        }

        .content-1-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #233876;
            padding: 15px;
            border-radius: 10px;
        }

        .content-1-image img {
            margin: 0;
            border-radius: 10px;
        }

        @media (max-width: 1024px) {
            .content-1-container {
                flex-direction: column;
                text-align: center;
                height: fit-content;
            }

            .content-1 {
                padding: 20px;
                min-height: fit-content;
            }

            .content-1-text {
                width: 100%;
                padding: 0 20px;
            }

            .content-1-title {
                font-size: 2rem;
            }

            .content-1-subtitle {
                font-size: 1.3rem;
            }

            .content-1-image {
