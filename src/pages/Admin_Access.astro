---
import Layout from "../layouts/Layout.astro";
import logo from "../assets/images/Erovoutika Dubai logo.png";
---
<Layout>
    <section class="hero-background" style={`background-image: url(${"/backgrounds/Trainings.png"});`}>
        <div class="form-container">
            <img class="erovoutika-logo" src={logo.src}/>
        </div>
    </section>    
</Layout>

<style>
    .hero-background {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        width: 100vw;
        text-align: center;
    }
    .form-container {
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 80%;
        max-width: 600px;
    }
    .erovoutika-logo {
        width: 100%;
        height: auto;
        margin-bottom: 20px;
    }
</style>