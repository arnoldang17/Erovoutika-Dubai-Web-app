<style>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: top;
        align-items: start;
        text-align: center;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 20px;
        height: 100vh;
    }
    .title {
        font-size: 42px;
        margin: 5px 0px 5px 0px;
        font-family: Inter;
        color: #F3F3FB;
    }
    .nominations-list {
        width: 100%;
        margin-top: 20px;
        font-family: Inter;
        color: #F3F3FB;
        text-align: left;
        vertical-align: middle;
        align-items: left;
        border-collapse: collapse  ;
        padding:5px;
    }
</style>