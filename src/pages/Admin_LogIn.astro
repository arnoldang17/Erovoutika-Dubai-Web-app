---
import Layout from "../layouts/Layout.astro";
import logo from "../assets/images/Erovoutika Dubai logo.png";
import show_password_icon from "../assets/images/utility-icons/show-password.png";
import hide_password_icon from "../assets/images/utility-icons/hide-password.png";
---
<Layout>
    <section class="hero-background" style={`background-image: url(${"/backgrounds/Trainings.png"});`}>
        <div class="form-container">
            <img class="erovoutika-logo" src={logo.src}/>
            <div class="form-content">
                <h1 class="admin-login">Admin Login</h1>
                <form class="admin-form">
                    <div class="username">
                        <input type="text" placeholder="Username" required />
                    </div>
                    <div class="password">
                        <input type="password" placeholder="Password" id="password" required  />
                        <img src={show_password_icon.src} id="show-pass" alt="show eye icon"/>
                        <img src={hide_password_icon.src} id="hide-pass" alt="hide eye icon" style="display: none;"/>
                        <div class="forgot-password">
                            <a href="#">Forgot Password?</a>
                        </div>
                        <!--<div class="have_account">
                            <p>Didn't have an account? <a href ="/Admin_SignUp"><u>Sign Up</u></a></p>
                        </div>-->
                    </div>
                </form>
                <button class="login-button" id="login_button">
                    <span>Log In</span>
                </button>
            </div>
        </div>
    </section>    
</Layout>

<style>
    .hero-background {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        text-align: center;
        height: 100vh;
    }
    .form-container {
        display: flex;
        flex-direction: column;
        padding: 20px;
        border-radius: 10px;
        align-items: center;
        width: 80%;
        height: fit-content;
        gap: 30px;
    }
    .erovoutika-logo{
        width: 180px;
        height: 68px;
        margin: 20px;
    }
    .form-content{
        display: flex;
        width: fit-content;
        height: fit-content;
        padding: 40px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 30px;
        border-radius: 20px;
        background: #F3F3FB;
    }
    .admin-login {
        color: #181D27;
        text-align: center;
        font-family: Inter;
        font-size: 32px;
        font-style: normal;
        font-weight: 600;
        line-height: 44px;
    }
    .admin-form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 20px;
    }
    .form-content input{
        position: relative;
        width: 100%;
        padding: 10px 15px 10px 15px;
        border-radius: 40px;
        border: 1px solid #ccc;
        font-size: 16px;
        font-family: Inter;
    }
    .form-content img{
        position: absolute;
        right: 15px;
        top: calc(20%);
        cursor: pointer;
    }
    .username {
        position: relative;
        width: 330px;
    }
    .password {
        position: relative;
        width: 330px;
    }
    
    .forgot-password{   
        margin-bottom: 10px;
        margin-top: 10px;
        text-align: right;
        width: 330px;
        color: rgba(0, 0, 0, 0.50);
        text-align: right;
        font-family: Inter;
        font-size: 14px;
        font-style: normal;
        line-height: 14px; /* 100% */
        letter-spacing: -0.28px;
        text-decoration-line: underline;
        text-decoration-style: solid;
        text-decoration-skip-ink: auto;
        text-decoration-thickness: auto;
        text-underline-offset: auto;
        text-underline-position: from-font;
    }
    .login-button {
        width: 50%;
        padding: 10px;
        background-color: #233876;
        color: #fff;
        border: none;
        border-radius: 40px;
        font-size: 16px;
        cursor: pointer;
        font-family: Inter;
    }
    
    .login-button:hover {
        background-color: #ccc;
        color: #233876;
        transform: scale(1.05)
    }

    .have_account {
        color: #181D27;
        text-align: center;
        font-family: Inter;
        font-style: normal;
    }
    .have_account a {
        color: #443DFF;
    }

    @media (max-width: 768px) {
        .hero-background{
            background-size: cover;
            background-position: center;
        }
        .form-container {
            min-height: fit-content;
            width:auto;
            margin: 10px;
        }

    }
    @media (max-width: 425px) {
        .hero-background{
            background-size: cover;
            background-position: center;
            width: max-content;
            height: 140vh;
        }
        .form-container {
            min-height: fit-content;
            justify-content: center;
            width:auto;
            margin: 10px;
        }
        .username {
            position: relative;
            width: 300px;
        }
        .password {
            position: relative;
            width: 300px;
        }
        .forgot-password{
            position: relative;
            right: 30px;
        }
    }
    @media (max-width: 375px){
        .hero-background{
            background-size: cover;
            background-position: center;
            width: max-content;
            height: 140vh;
        }
        .form-container {
            width: min(90%, fit-content);
            margin: 10px;
        }
        .username {
            position: relative;
            width: 300px;
        }
        .password {
            position: relative;
            width: 300px;
        }
        .forgot-password{
            position: relative;
            right: 30px;
        }
    }

    @media (max-width: 320px) {
        .hero-background{
            background-size: cover;
            background-position: center;
            width: max-content;
            height: 140vh;
        }
        .form-container {
            min-height: fit-content;
            width:auto;

            margin: 10px;
        }
        .username {
            position: relative;
            width: 300px;
        }
        .password {
            position: relative;
            width: 300px;
        }
        .forgot-password{
            position: relative;
            right: 30px;
        }
    }
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {

    // Tentative: Validation if username and password are correct
    // code here --

    // Event Listener for the show/hide password icons
    const showIcon = document.getElementById('show-pass') as HTMLImageElement | null;
    const hideIcon = document.getElementById('hide-pass') as HTMLImageElement | null;
    const passwordInput = document.getElementById('password') as HTMLInputElement | null;

    if (showIcon && hideIcon && passwordInput) {
        showIcon.addEventListener('click', () => {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                showIcon.style.display = "none";
                hideIcon.style.display = "inline";
            }
        });

        hideIcon.addEventListener('click', () => {
            if (passwordInput.type === 'text') {
                passwordInput.type = 'password';
                hideIcon.style.display = "none";
                showIcon.style.display = "inline";
            }
        });
    }

    // Tentative: Add a click event listener to the "Forgot Password?" link
    // code here --

    // Event Liestener for the login button
    const loginButton = document.getElementById('login_button') as HTMLButtonElement | null;

    if (loginButton) {
        loginButton.addEventListener('click', () => {

            // Redirect to the Admin Dashboard
            window.location.href = '/Trainings';

            // Validate if fields are filled
            const username = (document.querySelector('.username input') as HTMLInputElement).value;
            const password = (document.querySelector('.password input') as HTMLInputElement).value;

            if (username && password) {
                // Perform login action here
                console.log('Logging in with:', { username, password });
            } else {
                alert('Please fill in both fields.');
            }
        });
    }

});
</script>