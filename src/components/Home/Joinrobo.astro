---
import { fetchPageContent } from "@/components/db";

const content = await fetchPageContent("Home");
const joinContent = content.joinContent;
---

<!-- Font style roboto link -->
<link
    href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
    rel="stylesheet"
/>

<div
    class="flex flex-col items-center justify-center min-h-[437px] px-10 py-20"
>
    <section
        class="w-full max-w-[1280px] flex flex-col items-center gap-8 text-center"
    >
        <!-- Title -->
        <h2
            class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight leading-tight text-gray-900 dark:text-black font-[Roboto]"
        >
            {joinContent.title}
        </h2>

        <!-- Body -->
        <p
            class="text-xs md:text-lg lg:text-xl max-w-[790px] leading-relaxed text-black-700 dark:text-black-100 font-[Roboto]"
        >
            {joinContent.body}
        </p>

        <!-- Button -->
        <div
            class="flex flex-row justify-center items-center gap-4 font-[Roboto]"
        >
            <a
                href={joinContent.buttonLink}
                target="_blank"
                class="flex flex-row justify-center items-center w-[247px] h-[64px] text-white bg-[#1A5CB5] border-2 border-[#1A5CB5] rounded-full shadow-[0_25px_50px_-12px_rgba(0,0,0,0.25),0_0_15px_rgba(0,0,0,0.07)] transition-all duration-300 hover:bg-blue-700"
            >
                <span class="text-xl lg:text-[24px] font-bold tracking-wide">
                    {joinContent.button}
                </span>
            </a>
        </div>
    </section>
</div>
