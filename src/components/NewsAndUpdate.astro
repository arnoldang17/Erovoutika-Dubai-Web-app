---
const newsContent = {
    sectionTitle: "News and Updates",
    moreNewsLink: {
        text: "More News →",
        href: "/News",
    },
    cards: [
        {
            NewsCard1: {
                title: "ROBOLUTION DUBAI 2025",
                date: "December 15-18, 2025",
                description:
                    "Join us for an International Training & Tournament Camp in Robotics & Automation and Cybersecurity with Certification!",
                image: "/src/assets/images/NewsUpdateImages/Poster.png",
                alt: "ROBOlution Dubai",
                link: "https://www.facebook.com/share/p/1FjVj8sWys/",
            },
        },
        {
            NewsCard2: {
                title: "Calling All Robotics Coaches Around the Globe!",
                date: "April 28, 2025",
                description:
                    "Whether you’re coaching in a local school or guiding international champions — this is your MOMENT.",
                image: "/src/assets/images/NewsUpdateImages/RobolutionDubai.jpg",
                alt: "RobolutionDubai",
                link: "https://www.facebook.com/share/p/16UfvX7ZW1/",
            },
        },
        {
            NewsCard3: {
                title: "Erovoutika Honored as Outstanding Partner by St. Dominic College of Asia",
                date: "April 26, 2025",
                description:
                    "ERovoutika Electronics Robotics Automation has been awarded and recognized as an outstanding partner by St. Dominic College of Asia (SDCA) for its remarkable and invaluable contribution toward the institution’s mission of providing holistic education for all towards a better quality of life.",
                image: "/src/assets/images/NewsUpdateImages/Outstanding.jpg",
                alt: "Outstanding",
                link: "https://www.facebook.com/share/p/16MmGyfeGb/",
            },
        },
        {
            NewsCard4: {
                title: "Murata Robolution: Erovouthon 2.0 Competition 2025",
                date: "March 15, 2025",
                description:
                    "The Murata Robolution: Erovouthon 2.0 Competition 2025 successfully concluded on March 14, 2025, at the Philippine Manufacturing Co. of Murata, Inc., First Philippine Industrial Park (FPIP).",
                image: "/src/assets/images/NewsUpdateImages/Erovouthon.png",
                alt: "Erovouthon",
                link: "https://www.facebook.com/share/p/1YaF1RkjTF/",
            },
        },
    ],
};
---

<section class="bg-white p-5 md:px-16 lg:px-24">
    <div class="text-center mb-5">
        <h2 class="font-bold text-gray-800 text-[clamp(1.5rem,5vw,2.25rem)]">
            {newsContent.sectionTitle}
        </h2>
        <a
            href={newsContent.moreNewsLink.href}
            class="text-[clamp(1rem,2vw,1.125rem)] text-blue-600 hover:underline mt-2 inline-block"
        >
            {newsContent.moreNewsLink.text}
        </a>
    </div>

    <div class="mx-auto px-5 py-5">
        <div class="flex flex-wrap lg:flex-row justify-center gap-10">
            {
                newsContent.cards.map((cardWrapper) => {
                    const key = Object.keys(cardWrapper)[0];
                    const card = cardWrapper[key];
                    return (
                        <a
                            href={card.link}
                            target="_blank"
                            class="w-[90vw] sm:w-[300px] md:w-[350px]"
                            key={key}
                        >
                            <div class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-shadow hover:scale-[1.02] duration-200 flex flex-col h-full min-h-[400px] sm:min-h-[420px] md:min-h-[450px]">
                                <img
                                    src={card.image}
                                    alt={card.alt}
                                    class="w-full h-32 sm:h-36 md:h-40 object-cover"
                                />
                                <div class="p-4 sm:p-5 md:p-6 flex flex-col flex-1">
                                    <p class="text-xs sm:text-sm md:text-base text-gray-500 mb-1">
                                        {card.date}
                                    </p>
                                    <h3 class="font-semibold text-gray-900 mb-4 text-sm sm:text-base md:text-lg">
                                        {card.title}
                                    </h3>
                                    <p class="text-sm sm:text-base md:text-[1rem] text-gray-700 flex-1">
                                        {card.description}
                                    </p>
                                </div>
                            </div>
                        </a>
                    );
                })
            }
        </div>
    </div>
</section>
