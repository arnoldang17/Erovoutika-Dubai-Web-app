---
import background from '../assets/bg_contactinfo.png';
import ero_logo from '../assets/erovoutika_logo.png';
import telephone_icon from '../assets/telephone_icon.png';
import linkedin from '../assets/linkedin_icon.png';
import facebook from '../assets/facebook_icon.png';
import email_icon from '../assets/email_icon.png';
import ig from '../assets/ig_icon.png';
import "../styles/global.css";
import ci_qr from '../assets/ci_qr.png';

---
<footer id="contactinfo_footer">
	<div id="container_all">
		<div id="contactinfo_container">
			<img id="background" src={background.src} />
			<div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8"  >
				<div class="h-auto rounded-lg"
				style="padding: 2% 2% 2% 2%;">
					<h1 id="contact_info_title">Contact Information</h1>
					<div id="contacts_container">
						<img id="contact_info_telqr" src={ci_qr.src}/>
						<div id="contact_info_container">
							<div id="contact_tel_wrapper">
								<img src={telephone_icon.src} id="telephone_icon"/>
								<p id="contacts_telephone">123-456-7890</p>
								
							</div>
							<div id="contact_add_wrapper">
								<img src={email_icon.src} id="email_icon"/>
								<p id="contacts_email">erovoutika@gmail.com</p>
							</div>	
						</div>
					</div>
				</div>

				<div class="h-auto rounded-lg">
					<div id="contact_container_navbar">
						<button id="home_button">Home</button>
						<button id="news_button">News</button>
						<button id="awards_button">Awards</button>
						<button id="About">About</button>
						<button id="tourna_button">Trainings and Tournaments</button>
					</div>
					<div id="socials_container">
						<p id="follow_title">Follow Us!</p>
						<div id="socials_icons">
							<a href="https://www.linkedin.com/company/erovoutika/" target="_blank" class="social_link">
								<img src={linkedin.src} id="linkedin_icon"/>
							</a>
							<a href="https://www.facebook.com/erovoutika/" target="_blank" class="social_link">
								<img src={facebook.src} id="facebook_icon"/>
							</a>
							<a href="https://www.instagram.com/erovoutika/" target="_blank" class="social_link">
								<img src={ig.src} id="ig_icon"/>
							</a>
						</div>
					</div>
				</div>

				<div class="h-auto rounded-lg" style="padding: 2% 2% 2% 2%;">
					<h1 id="send_message_title">Send Us a Message</h1>
					<div id="sender_info_container">
						<form id="sender_info_form">
							<input type="text" id="sender_name" name="sender_name" placeholder="Your Name" required/>
							<input type="email" id="sender_email" name="sender_email" placeholder="Your Email" required/>
						</form>
					</div>
					<div id="sender_message_container">
						<form id="sender_message_form">
							<textarea id="sender_message" name="sender_message" placeholder="Your Message" required></textarea>
						</form>
					</div>
					<div id="send_button_container">
						<button id="send_button">Send Message</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="final_footer_container">
		<div class="grid grid-cols-1 gap-8 lg:grid-cols-2 w-full h-full">
			<div class="h-auto rounded-lg place-content-left">
				<div id="final_footer_logo" >
					<img src={ero_logo.src} id="erovoutika_logo"/>
				</div>
			</div>
			<div class="h-auto rounded-lg place-content-center">
				<div id="final_footer">
					<p>Â© 2021 Erovoutika. All rights reserved.</p>
				</div>
			</div>
		</div>
	</div>
</footer>


<style>
	#background {
		/* Layout */
		width: 100%;
		height: auto;
		top: 0;
		left: 0;
		position: absolute;
		z-index: -1;
	}
	#container_all {
		/* Layout */
		display: flex;
		width: 100%;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	#contactinfo_container {
		/* Layout */
		padding: 2% 2% 2% 2%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	#contacts_container {
		/* Layout */
		margin-top: 2%;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: row;
		justify-content: left;
		align-items: left;
	}
	#contact_info_title {
		/* Style */
		color: #FFF;
		font-family: Poppins;
		font-size: 42px;
		font-style: normal;
		font-weight: 800;
		line-height: 140%; /* 67.2px */
		letter-spacing: 0.24px;
	}
	#contact_info_container {
		/* Layout */
		display: flex;
		flex-direction: column;
		justify-content: left;
