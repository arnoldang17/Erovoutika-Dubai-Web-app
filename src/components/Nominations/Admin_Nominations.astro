---
import Layout from '@/layouts/Layout.astro';
import background from '/backgrounds/Trainings.png';
import { useEffect } from 'react';
---
    <div class="hero">
        <div class="table-container">
            <h1 class="title">Nominations</h1>
            <div class="table-wrapper">
                <table class="nominations-list">
                    <thead>
                        <tr>
                            <th>Count</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Designation</th>
                            <th>Contact</th>
                        </tr>
                    </thead>
                    <tbody id="nomination-table-body">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<style>
    .hero {
        display: flex;
        background-size: cover;
        background-position: top;
        background-repeat: no-repeat;
        margin: 20px 20px 20px 20px;
        width: fit-content;
        min-width: 100%;
        height: 100%;
    }
    .table-container {
        display: flex;
        flex-direction: column;
        padding: 20px;
        border-radius: 10px;
        width: 100%;
        gap: 10px;
        background-color: #b8c3e62f;
        backdrop-filter: blur(50px);
    }
    .title {
        font-size: 42px;
        margin: 5px 0px 5px 0px;
        font-family: Inter;
        color: black;
    }
    .table-wrapper {
        border-radius: 
        overflow: hidden;
    }
    .nominations-list {    
        font-family: Inter;
        font-size: 14px;
        text-align: left;
        vertical-align: middle;        
        width: 100%;
        border-collapse: separate;
        border-radius: 10px;
        border-spacing: 0;
        padding:2px;
        overflow: hidden;
    }
    :global(.nominations-list th) {
        background-color: #233876;
        color: white;
        padding: 10px;
        border: 1px solid #ddd;
    }
    :global(.nominations-list th:first-child) {
        border-top-left-radius: 10px;
    }
    :global(.nominations-list th:last-child) {
        border-top-right-radius: 10px;
    }
    :global(.nominations-list td) {
        padding: 10px;
        background-color: #F3F3FB;
        border: 1px solid #ddd;
        color: #233876;
    }
    :global(.nominations-list tr:last-child td:first-child) {
        border-bottom-left-radius: 10px;
    }
    :global(.nominations-list tr:last-child td:last-child) {
        border-bottom-right-radius: 10px;
    }

</style>

<script type="module" is:inline>

    const table_body = document.getElementById('nomination-table-body')

    function renderTable() {
        const data = JSON.parse(localStorage.getItem('nominations') || '[]')
        
        table_body.innerHTML = '';

        data.forEach((entry, index) => {
            const { firstName, lastName, designation, contact } = entry;
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${index + 1}</td>
                <td>${firstName}</td>
                <td>${lastName}</td>
                <td>${designation}</td>
                <td>${contact}</td>
            `;
            table_body.appendChild(row);
        });
    }
    renderTable();
</script>